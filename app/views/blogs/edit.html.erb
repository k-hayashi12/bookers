<h1>Editing Book</h1>
<!--form_for部分 !-->
<%= form_for(@blog) do |f| %>

<h6>Title</h6>
<%= f.text_field :title, class:"book_title" %>

<h6>Body</h6>
<%= f.text_area :body, class:"book_body" %>
<%= f.submit 'Update Book'%>

<% end %>

<table>
	<tr>
 	<th><%= link_to "Show", blog_path(@blog.id), class: "show_#{@blog.id}" %></th>
	<th><p>|</p></th>
	<th><%= link_to "Back", blogs_path, class: "back" %></th>
	</tr>
</table>